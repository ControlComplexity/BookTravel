<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#000000"
            android:orientation="horizontal"
            tools:context="com.example.circleimageviewdemo_1.MainActivity" >

            <Button
                android:id="@+id/driftbooks_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:background="@drawable/selector_btn_back"
                android:gravity="center_horizontal|center_vertical"
                android:text="返回"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/yhmingcheng"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/driftbooks_back_btn"
                android:gravity="center"
                android:text="漂流笔记"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <ImageButton
                android:id="@+id/driftnotes_imagebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/xiebiji" >
            </ImageButton>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/driftnotes_userphoto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/aaa" >
            </ImageView>

            <TextView
                android:id="@+id/driftnotes_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/driftnotes_userphoto"
                android:layout_below="@id/driftnotes_userphoto"
                android:layout_marginTop="10dp"
                >
            </TextView>

            <LinearLayout
                android:id="@+id/addnotes_centerl1"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/driftnotes_userphoto"
                android:layout_toRightOf="@id/driftnotes_userphoto"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/driftnotes_columntitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp" >
                </TextView>

                <!-- 关注人数，关注 -->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="关注人数"
                        android:textSize="15dp" >
                    </TextView>

                    <TextView
                        android:id="@+id/driftnotes_columnconcernnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="10"
                        android:textSize="15dp" >
                    </TextView>

                    <Button
                        android:id="@+id/driftnotes_columnconcern"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="关注"
                        android:textSize="15dp" >
                    </Button>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="专栏简介"
                    android:textSize="15dp" >
                </TextView>

                <TextView
                    android:id="@+id/driftnotes_columnintroduction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="《小王子》是著名儿童文学短篇小说"
                    android:textSize="10dp" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </LinearLayout>

            <ImageView
                android:id="@+id/driftnotes_chouxiangbook"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/chouxiangbook" >
            </ImageView>

            <TextView
                android:id="@+id/driftnotes_bookname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/driftnotes_chouxiangbook"
                android:text="《小王子》"
                android:textSize="15dp" >
            </TextView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/text1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="读者笔记"
                android:textSize="15dp" >
            </TextView>

            <TextView
                android:id="@+id/text2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="漂友随评"
                android:textSize="15dp" >
            </TextView>

            <TextView
                android:id="@+id/text3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="漂流旅程"
                android:textSize="15dp" >
            </TextView>
        </LinearLayout>

        <ImageView
            android:id="@+id/cursor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="matrix"
            android:src="@drawable/a" />

        <android.support.v4.view.ViewPager
            android:id="@+id/note_vPager"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:background="#000000"
            android:flipInterval="30"
            android:persistentDrawingCache="animation" />
    </LinearLayout>

</ScrollView>