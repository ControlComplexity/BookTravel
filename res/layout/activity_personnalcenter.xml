<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:circle="http://schemas.android.com/apk/res/com.application.booktravel.widget"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.circleimageviewdemo_1.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#000000"
            android:orientation="horizontal"
            tools:context="com.example.circleimageviewdemo_1.MainActivity" >

            <TextView
                android:id="@+id/yhmingcheng"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="用户名称"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/gerenshezhi"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:src="@drawable/shezhi" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="#ffffff" >

           

            <ImageView
                android:id="@+id/circleimage1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/hugh"
                >
            </ImageView>

            <TextView
                android:id="@+id/yhnianling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/circleimage1"
                android:layout_below="@+id/circleimage1"
                android:background="@android:color/white"
                android:gravity="center"
                android:text="用户年龄"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/yhxingbie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/circleimage1"
                android:layout_below="@+id/circleimage1"
                android:background="@android:color/white"
                android:gravity="center"
                android:text="用户性别"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/booktravel_reg"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_marginLeft="120dp"
                android:src="@drawable/booktravel" />
        </RelativeLayout>

        <!-- 我的书籍点击事件 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/myreadnotes_l1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/yuan_gerenzhongxin1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="0dp"
                    android:src="@drawable/gray_circle" />

                <TextView
                    android:id="@+id/myreadnotes_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="他的漂流笔记" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="3dp"
                android:layout_height="50dp"
                android:background="#efefef" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mybooks_l2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/yuan_gerenzhongxin2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="0dp"
                    android:src="@drawable/gray_circle" />

                <TextView
                    android:id="@+id/mybook_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="他的书籍" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#efefef" >
        </View>

        <com.application.booktravel.user_defined.MyListView1
            android:id="@id/android:list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="10dp" >
        </com.application.booktravel.user_defined.MyListView1>
    </LinearLayout>

</ScrollView>